#!/bin/sh -eu


PROJECT_ROOT="$(dirname "$0")/.."


main()
(
    jq="$(from_nix jq)"
    less="$(from_nix less)"
    report="$(build_report)"
    "$jq" --color-output --unbuffered . < "$report" | "$less"
)


from_nix()
(
    cmd="$1"
    path="$(
        nix-build \
            --expr "with (import <nixpkgs> {}); $cmd" \
            --no-out-link)"
    echo "$path/bin/$cmd"
)


build_report()
(
    nix-build \
        --attr example-extra.licenses \
        --no-out-link \
        "$PROJECT_ROOT/build.nix"
)


main
